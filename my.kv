<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Создание аккаунта"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":0.9}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.05, "top":0.75}
                text: "Имя"
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.35, "top":0.97-0.13*2}
                size_hint: 0.3, 0.05
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.036, "top":0.69}
                text: "Логин"
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.35, "top":0.91-0.13*2}
                size_hint: 0.3, 0.05
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.023, "top":0.63}
                text: "Пароль"
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.35, "top":0.85-0.13*2}
                size_hint: 0.3, 0.05
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 16**4

        Button:
            pos_hint:{"x":0.35,"y":0.4}
            size_hint: 0.3, 0.05
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Авторизация"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.35,"y":0.45}
            size_hint: 0.3, 0.05
            text: "Создать аккаунт"
            font_size: (root.width**2 + root.height**2) / 15**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"Логин"
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.11, "top":0.705}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 16**4
            multiline: False
            pos_hint: {"x": 0.35 , "top":0.65}
            size_hint: 0.3, 0.05

        Label:
            text:"Пароль"
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1, "top":0.635}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 15**4
            multiline: False
            password: True
            pos_hint: {"x": 0.35 , "top":0.58}
            size_hint: 0.3, 0.05

        Button:
            pos_hint:{"x":0.35,"y":0.4}
            size_hint: 0.3, 0.05
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Вход"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.35,"y":0.45}
            size_hint: 0.3, 0.05
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Создать аккаунт"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<MainWindow>:
    n: n
    email: email
    created:created

    FloatLayout:
        Label:
            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Имя "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Логин "

        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Акк создан в - "

        Button:
            pos_hint:{"x":0.4, "y": 0.1}
            size_hint:0.2,0.1
            text: "Покинуть мир"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"